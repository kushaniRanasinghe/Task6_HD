pipeline {
    agent any

    environment {
        // Define your environment variables here
        DEPLOY_ENV = 'production'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                // For simplicity, we are just archiving the files
                sh 'tar -czf simple-shopping-cart.tar.gz index.html styles.css script.js'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                // Dummy test step
                sh 'echo "No tests specified"'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying to environment...'
                // Dummy deployment step
                sh 'echo "Deploying build to server"'
            }
        }
        
        stage('Release') {
            steps {
                echo 'Releasing the build...'
                // Dummy release step
                sh 'echo "Tagging the release"'
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        
        failure {
            echo 'Pipeline failed.'
        }
    }
}
