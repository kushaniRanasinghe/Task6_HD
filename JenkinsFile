pipeline {
    agent any

    environment {
        // Define your environment variables here
        DEPLOY_ENV = 'production'
        SONARQUBE_SCANNER_HOME = 'C:\\Users\ASUS\\sonarqube-10.5.1.90531\\sonarqube-10.5.1.90531\\bin' // Adjust this path as necessary
        SONARQUBE_TOKEN = 'squ_84bf302632612e8db2938e3603da3f6b62c7f66b'
    }

    stages {
        stage('Build') {
            steps {
                  echo 'Building the project...'
                  bat 'powershell Compress-Archive -Path index.html, styles.css, script.js -DestinationPath simple-shopping-cart.zip'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'npm run test'
            }
        }

        stage('Code Quality Analysis') {
            steps {
                withSonarQubeEnv('sq1') {
                    bat "${env.SONARQUBE_SCANNER_HOME}\\sonar-scanner -Dsonar.projectKey=squ_84bf302632612e8db2938e3603da3f6b62c7f66b -Dsonar.sources=. -Dsonar.host.url=http://localhost:9000 -Dsonar.login=${env.SONARQUBE_TOKEN}"
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to environment...'
                // Dummy deployment step
                sh 'echo "Deploying build to server"'
            }
        }
        
        stage('Release') {
            steps {
                echo 'Releasing the build...'
                // Dummy release step
                sh 'echo "Tagging the release"'
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        
        failure {
            echo 'Pipeline failed.'
        }
    }
}
